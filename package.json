    "rimraf": "5.0.5",
    "stylelint": "16.1.0",
    "stylelint-config-standard-scss": "12.0.0",
    "svg-inline-loader": "0.8.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "webextension-polyfill": "0.10.0",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4"
